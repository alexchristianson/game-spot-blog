<div class='is-flex is-flex-grow-1'>
    <form class='new-post-form box m-3 is-flex is-flex-grow-1 is-flex-direction-column'>
        <p class='title'>Create Post</p>
        <div class="field">
            <input class="input" name='post-title' type="text" placeholder="Title">
        </div>

        <div class="field">
            <input class="input" name='post-genre' type="text" placeholder="Genre">
        </div>

        <div class="field is-flex-grow-1">
            <textarea class="textarea" name='post-text' placeholder="Text"></textarea>
        </div>

        <div class="field">
            <p class="control">
                <button type='submit' class="button is-success">
                    Submit
                </button>
            </p>
        </div>
    </form>

    <form class='XXXXXX-post-form box m-3 is-flex-grow-1'>
        <p class='title'>Your Posts</p>
        <div class="field">
            <p class="control has-icons-left has-icons-right">
                <input id='email-login' class="input" type="email" placeholder="Email">
                <span class="icon is-small is-left">
                    <i class="fas fa-envelope"></i>
                </span>
            </p>
        </div>
        <div class="field">
            <p class="control has-icons-left">
                <input id='password-login' class="input" type="password" placeholder="Password">
                <span class="icon is-small is-left">
                    <i class="fas fa-lock"></i>
                </span>
            </p>
        </div>
        <div class="field">
            <p class="control">
                <button type='submit' class="button is-success">
                    Login
                </button>
            </p>
        </div>
    </form>
</div>

<script src="/js/add-post.js"></script>