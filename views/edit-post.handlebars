<form class='updatepost-form box m-3 is-flex is-flex-grow-1 is-flex-direction-column post-background'>
    <p class='title'>Edit Post</p>
    <div class="field is-flex">

        <input class="input post-title mr-2" name='post-title' type="text" value= "{{post.title}}">

        <div class="dropdown">
            <div class="dropdown-trigger">
                <button class="button" aria-haspopup="true" aria-controls="dropdown-menu">
                <span class='genre'>{{post.genre.genre_name}}</span>
                <span class="icon is-small">
                    <i class="fas fa-angle-down" aria-hidden="true"></i>
                </span>
                </button>
            </div>

            <div class="dropdown-menu" id="dropdown-menu" role="menu">
                <div class="dropdown-content">
                    {{#each genres as |genre|}}
                    <p class='dropdown-item' data-genre-id='{{genre.id}}'>
                        {{genre.genre_name}}
                    </p>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>

    <div class="field is-flex-grow-1">
        <textarea class="textarea" name='post-content'>{{post.content}}</textarea>
    </div>

    <div class="field">
        <p class="control">
            <button type='submit' class="button is-success">
                Submit
            </button>
        </p>
    </div>
</form>

<script src="/js/editpost.js"></script>