<body class="is-flex is-flex-direction-column">
    <header class="is-flex-desktop is-flex-wrap-wrap is-justify-content-space-between is-align-items-center p-3">
        <h1>
            <a class="title is-1 m-3" href="/">Game Spot Blog</a>
        </h1>
        <nav>
            {{#if loggedIn}}
            <a href="/dashboard" class='title m-3'>Dashboard</a> 
            <button id="logout" class="btn-no-style title m-3">Logout</button>
            {{else}}
            <a class="title m-3" href="/login">Login</a>
            {{/if}}
        </nav>
    </header>

    <main class="is-flex is-flex-grow-1 is-flex-wrap-wrap">
        {{{ body }}}
    </main>

    <footer class="is-flex is-justify-content-space-between is-align-items-center has-background-primary has-text-black">
        <p class="is-inline is-size-4 m-3">Made by Game Spot Blog.</p>
        <p class="is-inline is-size-5 m-3">Â© 2021 Game Spot Blog, Inc.</p>
    </footer>

    {{#if loggedIn}}
        <script src="/js/logout.js"></script>
    {{/if}}
</body>

</html>

